<body>
  <main>
    <!--ユーザー編集失敗時のバリデーションエラーメッセージ-->
    <div class="container px-5 px-sm-0">
    <% if @user.errors.any? %>
       <h4><%= @user.errors.count %>errors prohibited this obj from being saved:</h4>
        <ul>
       <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
        </ul>
    <% end %>
    </div>
    <p></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
             <%= form_with model: @user do |f| %>
             
             <h6>Name</h6>
             <%= f.text_field :name ,class:"w-75"%>
             <p></p>
             
             <h6>Image</h6>
             <%= f.file_field :profile_image, accept: "image/*" %>
             <p></p>
             
             <h6>Introduction</h6>
             <%= f.text_area :introduction ,class:"w-75" %>
             <p></p>
             <%= f.submit "Update User" ,class: 'btn btn-secondary btn-auto' %>
             <% end %>
          </div>
        </div>
      </div>
    </main>

  </body>