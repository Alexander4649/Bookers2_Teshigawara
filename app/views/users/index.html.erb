<body>
<main>
    <!--User info 部分-->
    <p></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
        <h2>User info</h2>
        
          <!-- ユーザーの詳細 -->
          <table class="table">
            <div><%= image_tag @user.get_profile_image(100,100) %></div>
            
            <thead>
              <tr>
                <td><B>name</B></td>
                <td><B><%= @user.name %></B></td>
              </tr>
            </thead>
            
             <tbody>
               <tr>
                 <td><B>introduction</B></td>
                 <td><B><%= @user.introduction %></B></td>
               </tr>
             </tbody>
          </table>
          
             <!--ユーザー編集ボタン-->
            
             <%= link_to edit_user_path(@user), class: 'btn btn-default btn-outline-secondary btn-block' do %>
             <i class="fas fa-user-cog"></i>
             <% end %><br>
             
             <!--投稿フォーム-->
             
             <h2>New book</h2>
             <%= form_with model: @book do |f| %>
             <h6>Title</h6>
             <%= f.text_field :title %>
             <p></p>
             <h6>Opinion</h6>
             <%= f.text_area :body %>
             <p></p>
             <%= f.submit "Create Book" ,class: 'btn btn-success btn-auto' %>
             <% end %>
        </div>
        
        <!--User一覧部分-->
        
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class ="table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
              </tr>
            </thead>
            
            <tbody>
                 <tr>
                <!--User一覧表示部分-->
                <!--@usersの情報ひとつひとつを|user|に入れ込んでいるので、それを取り出す記述としてuser.get_profile...やuser.nameの記述になる-->
                <% @users.each do |user| %>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
                <%end%>
                
            </tbody>
          </table>
         </div>
          
      </div>
    </div>
  </main>
 </body>