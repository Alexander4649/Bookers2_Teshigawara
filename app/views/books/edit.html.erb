<body>
  <main>
    <div class="container px-5 px-sm-0">
    <!--投稿詳細編集失敗時のバリデーションエラーメッセージ-->
    <% if @book.errors.any? %>
       <h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
        <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
    </div>
    
    <p></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>Editing Book</h2>
             <%= form_with model: @book do |f| %>
             
             <h6>Title</h6>
             <%= f.text_field :title ,class:"w-75"%>
             <p></p>
             <h6>Opinion</h6>
             <%= f.text_area :body ,class:"w-75" %>
             <p></p>
             <%= f.submit "Update Book" ,class: 'btn btn-success btn-auto' %>
             <% end %>
             <p></p>
             <p><%= link_to "Show", book_path %> | <%= link_to "Back", books_path %></p>
             
          </div>
        </div>
      </div>
    </main>

  </body>